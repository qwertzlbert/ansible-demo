# web-server config for {{ ansible_host }}/{{ inventory_hostname }}

Alias / "/mnt/"

<Directory /mnt/>
    Options +FollowSymlinks
    AllowOverride All

    <IfModule mod_dav.c>
        Dav off
    </IfModule>

    SetEnv HOME /mnt/
    SetEnv HTTP_HOME /mnt/

</Directory>
<IfModule mod_headers.c>
    Header always set Strict-Transport-Security "max-age=15768000; includeSubDomains; preload"
</IfModule>


